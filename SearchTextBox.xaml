<UserControl x:Class="RS.WPF.SearchBox.SearchTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             x:Name="uc"
             d:DesignHeight="40" d:DesignWidth="800">
    <UserControl.Resources>
        <SolidColorBrush x:Key="BorderBrush" Color="Black"/>
        <SolidColorBrush x:Key="FocusBackgroundBrush" Color="LightGoldenrodYellow"/>
        <SolidColorBrush x:Key="DefaultBackgroundBrush" Color="White"/>

        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="LayoutGrid">
        <Border Name="ContainerBorder" Grid.Row="2" BorderThickness="1" 
            BorderBrush="{StaticResource BorderBrush}" 
            VerticalAlignment="Center" 
            CornerRadius="5" Height="40" 
            Background="{StaticResource DefaultBackgroundBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="35"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Vector Icon -->
                <Path Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z" 
                  Fill="Gray" Stretch="Uniform" Height="20" Width="20" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <!-- Watermark Overlay -->
                <TextBlock Text="{Binding ElementName=uc, Path=HintText}" 
                       Grid.Column="1" VerticalAlignment="Center" Margin="5,1,5,1"
                       Foreground="Gray" IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=SearchInput, Path=Text}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBox Name="SearchInput" Margin="5,1,5,1" Grid.Column="1"
                     Text="{Binding ElementName=uc, Path=TextValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     PreviewTextInput="SearchInput_PreviewTextInput" TextChanged="SearchInput_TextChanged">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                            <Style.Triggers>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <!-- Handle Focus Background via Triggers on the Parent Border if possible, or here -->
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <Button x:Name="btnClear" Grid.Column="2" Content="✕" 
                    Width="25" Height="25" Margin="0,0,5,0"
                    Background="Transparent" BorderThickness="0" 
                    Click="BtnClear_Click" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=SearchInput, Path=Text}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="Red"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
